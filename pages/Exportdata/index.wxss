.content {
  width: 630rpx;
  margin-left: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  font-family: PingFangSC;
  /* font-weight: bold; */
  color: rgba(78, 77, 77, 1);
}

.name {
  width: 406rpx;
  height: 60rpx;
  border: 2rpx solid rgba(236, 98, 23, 1);
  border-radius: 6rpx;
  line-height: 60rpx;
  padding: 0 10rpx;
  margin-top: 60rpx;
}

.binduser {
  width: 630rpx;
  height: 70rpx;
  background: linear-gradient(120deg, rgba(235, 95, 44, 1) 0%, rgba(235, 95, 43, 1) 28.000000000000004%, rgba(239, 128, 33, 1) 79%, rgba(245, 170, 51, 1) 100%);
  border-radius: 6rpx;
  line-height: 70rpx;
  text-align: center;
  letter-spacing: 6rpx;
  color: white;
  margin-top: 156rpx;
}

.inputitems {
  width: 480rpx;
  display: flex;
  justify-content: space-between;
  margin-top: 137rpx;
}

.xiaoqu {
  width: 240rpx;
  height: 60rpx;
  border: 2rpx solid rgba(236, 98, 23, 1);
  border-radius: 6rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.xiaoqu input {
  height: 60rpx;
  width: 190rpx;
  padding: 0 10rpx;
}

.xiaoquitems {
  position: absolute;
  top: 62rpx;
  left: 0rpx;
  width: 215rpx;
  height: 400rpx;
  background-color: #f5f5f5;
  z-index: 99;
  display: flex;
  flex-direction: column;
  line-height: 40rpx;
  padding: 0 10rpx;
  font-weight: bold;
  overflow-y: scroll;
}

.dongitems {
  position: absolute;
  top: 62rpx;
  left: 0rpx;
  width: 173rpx;
  height: 400rpx;
  background-color: #f5f5f5;
  z-index: 99;
  display: flex;
  flex-direction: column;
  line-height: 40rpx;
  padding: 0 10rpx;
  font-weight: bold;
  overflow-y: scroll;
}

.xiaoquitem {
  margin-top: 15rpx;
}

.up {
  width: 21rpx;
  height: 10rpx;
}

.dong {
  width: 200rpx;
  height: 60rpx;
  border: 2rpx solid rgba(236, 98, 23, 1);
  border-radius: 6rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.dong input {
  height: 60rpx;
  width: 150rpx;
  padding: 0 10rpx;
}

.tishimsg {
  height: 400rpx;
  width: 630rpx;
  position: fixed;
  top: 400rpx;
  left: 60rpx;
  background-color: white;
  z-index: 9001;
  border-radius: 4rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 36rpx;
}

.close {
  width: 26rpx;
  height: 25rpx;
  position: absolute;
  top: 16rpx;
  right: 16rpx;
}

.success {
  width: 136rpx;
  height: 136rpx;
  margin-top: 40rpx;
