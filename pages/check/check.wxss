/* pages/check/check.wxss */

.container {
  width: 750rpx;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.hd {
  width: 288rpx;
  height: 59rpx;
  margin: 30rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 3rpx solid rgba(236, 98, 23, 1);
  border-radius: 6rpx;
}

.hd>view {
  width: 94rpx;
  text-align: center;
  color: #515151;
  font-size: 30rpx;
  line-height: 59rpx;
}

.hd>view.active {
  background: #eb5e2b;
  color: white;
}

.qigesha {
  width: 200rpx;
  margin: 30rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #515151;
  letter-spacing: 2rpx;
}

.qigesha image {
  width: 6rpx;
  height: 12rpx;
}

.qigesha image:last-child {
  transform: rotate(180deg);
}

.calendar {
  width: 630rpx;
  height: 50rpx;
  background: rgba(238, 238, 238, 1);
  white-space: nowrap;
}

.day {
  display: inline-block;
  width: 70rpx;
  height: 50rpx;
  line-height: 48rpx;
  text-align: center;
  border: 2rpx solid rgba(238, 238, 238, 1);
  box-sizing: border-box;
  border-radius: 5rpx;
}

.day.active {
  border: 2rpx solid rgba(235, 94, 43, 1);
  border-radius: 5rpx;
}

.echarts {
  width: 100%;
  height: 550rpx;
}

.ec-title {
  margin-top: 70rpx;
  font-size: 24rpx;
  color: #4e4d4d;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.ec-title .e-left text {
  display: inline-block;
  width: 19rpx;
  height: 19rpx;
  background: rgba(235, 94, 43, 1);
}

.e-left {
  display: flex;
}

.e-left_title {
  font-size: 26rpx;
  margin-right: 20rpx;
}

.ec-title .e-left text:last-child {
  background: #f5aa33;
}

.e-right {
  width: 185rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: 2rpx solid rgba(98, 98, 98, 1);
  border-radius: 6rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.e-right view {
  width: 50%;
  text-align: center;
  font-size: 22rpx;
  font-weight: bold;
}

.e-right view.active {
  background: rgba(98, 98, 98, 1);
  color: white;
}

.todaytop, .todaylow {
  width: 333rpx;
  line-height: 41rpx;
  font-size: 26rpx;
  color: #515151;
  margin: 0 auto;
  background: #eee;
  border-radius: 6rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 690rpx;
  padding: 0 30rpx;
  height: 50rpx;
  font-size: 26rpx;
  font-family: PingFangSC;
  color: rgba(78, 77, 77, 1);
  line-height: 50rpx;
  border-bottom: 1rpx solid #eee;
}

.right_icon {
  width: 13rpx;
  height: 23rpx;
  margin-left: 20rpx;
}

.daochu {
  width: 230rpx;
  height: 54rpx;
  background: linear-gradient(90deg, rgba(235, 95, 44, 1) 0%, rgba(235, 95, 43, 1) 28.000000000000004%, rgba(239, 128, 33, 1) 79%, rgba(245, 170, 51, 1) 100%);
  border-radius: 4rpx;
  text-align: center;
  margin-left: 200rpx;
  font-size: 26rpx;
  font-family: PingFangSC;
  color: rgba(255, 255, 255, 1);
  line-height: 54rpx;
}
.admin_content {
  width: 630rpx;
  margin-left: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  font-family: PingFangSC;
  color: rgba(78, 77, 77, 1);
}

.admin_logo {
  width: 238rpx;
  height: 233rpx;
  margin-top: 44rpx;
}

.admin_binduser {
  width: 690rpx;
  height: 80rpx;
  background: linear-gradient(120deg, rgba(235, 95, 44, 1) 0%, rgba(235, 95, 43, 1) 28.000000000000004%, rgba(239, 128, 33, 1) 79%, rgba(245, 170, 51, 1) 100%);
  border-radius: 6rpx;
  line-height: 80rpx;
  text-align: center;
  letter-spacing: 6rpx;
  color: white;
  margin-top: 111rpx;
  font-size: 30rpx;
}

.admin_inputitems {
  display: flex;
  justify-content: center;
  margin-top: 36rpx;
}

.admin_xiaoqu {
  width: 235rpx;
  height: 60rpx;
  border: 2rpx solid rgba(236, 98, 23, 1);
  border-radius: 6rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  margin-right: 25rpx;
}

.admin_xiaoqu input {
  height: 60rpx;
  width: 190rpx;
  padding: 0 10rpx;
}

.admin_xiaoquitems {
  position: absolute;
  top: 62rpx;
  left: 0rpx;
  width: 215rpx;
  height: 400rpx;
  background-color: #f5f5f5;
  z-index: 99;
  display: flex;
  flex-direction: column;
  line-height: 40rpx;
  padding: 0 10rpx;
  font-weight: bold;
  overflow-y: scroll;
}

.admin_dongitems {
  position: absolute;
  top: 62rpx;
  left: 0rpx;
  width: 173rpx;
  height: 400rpx;
  background-color: #f5f5f5;
  z-index: 99;
  display: flex;
  flex-direction: column;
  line-height: 40rpx;
  padding: 0 10rpx;
  font-weight: bold;
  overflow-y: scroll;
}

.admin_xiaoquitem {
  margin-top: 15rpx;
}

.admin_up {
  width: 12rpx;
  height: 6rpx;
}

.admin_dong {
  width: 193rpx;
  height: 60rpx;
  border: 2rpx solid rgba(236, 98, 23, 1);
  border-radius: 6rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.admin_dong input {
  height: 60rpx;
  width: 150rpx;
  padding: 0 10rpx;
}